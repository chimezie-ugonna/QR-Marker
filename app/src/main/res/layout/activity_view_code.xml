<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".controller.activities.ViewCode"
    tools:ignore="Overdraw">

    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_solid_bottom_grey_stroke"
        android:padding="@dimen/padding">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/title"
            android:layout_height="@dimen/title"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="@dimen/title"
            android:layout_height="@dimen/title"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/share"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bar"
        android:gravity="center"
        android:padding="@dimen/padding">

        <ImageView
            android:id="@+id/code"
            android:layout_width="@dimen/image_dimen"
            android:layout_height="@dimen/image_dimen"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

</RelativeLayout>